<%- include('./partials/header.ejs') %>

<div class="blogs content">
    <div class="content-tabs">
        <a href="/blogs"><span class="material-symbols-outlined">add</span></a>
        <a href="/blogs" class="active" disabled>For you</a>
        <a href="/blogs/?feed=following">Following</a>
        <a href="/blogs/?feed=trending">Trending</a>
    </div>

    <div>
    <% blogs && blogs.map((blog) => { %>
        <div class="blog">
            <p class="author"><img src="/res/sample-profile-pic.jpg" class="profile-pic"><%= blog.author.fullName %></p>
            <h3><a href="/blogs/<%= blog.slug %>"><%= blog.title %></a></h3>
            <p class="snippet"><%= blog.snippet %></p>
            <p class="options">
                <span class="timestamp">
                    <% if(new Date(blog.createdAt) < new Date(blog.updatedAt)){ %>
                        (edited)
                    <% } %>
                    <%= blog.timestamp %>
                </span>
                <span>
                    <%= blog.readingTime %>
                </span>
            </p>
        </div>
    <% }) %>
    </div>

    <div class="pagination">
        <div>
            <% if ( nextPage ) { %>
            <a href="/blogs?p=<%= nextPage %>"><i class="fa-solid fa-chevron-left"></i> Older Posts</a>
            <% } %>
        </div>
        <div>
            <% if ( prevPage ) { %>
                <a href="/blogs?p=<%= prevPage %>">Latest Posts <i class="fa-solid fa-chevron-right"></i></a>
            <% } %>
        </div>
    </div>
</div>

<script>
    const searchBar = document.querySelector('.search-bar');
    const searchBtn = document.querySelector('.search-btn');
    searchBar.addEventListener('input', () => {
        searchBar.value ? searchBtn.disabled = false : searchBtn.disabled = true;
    })
    searchBar.addEventListener('focus', () => {
        searchBar.value ? searchBtn.disabled = false : searchBtn.disabled = true;
    })
</script>
